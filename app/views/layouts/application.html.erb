<!DOCTYPE html>
<html>
  <head>
    <title>Espn</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
          <div class="nav navbar-nav">
            <div class="navbar-header mr-5">
              <%= link_to "ESPN", root_path, class:"navbar-brand" %>
            </div>
            <div class="navbar-item p-1">
              <% if user_signed_in? %>
                <%= link_to "New Post", new_message_path, class: "btn btn-sm btn-primary" %>
              <% end %>
            </div>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class:"btn btn-sm btn-danger" %></li>
            <% else %>
              <li><%= link_to "Sign In", new_user_session_path, class: "btn btn-sm btn-primary mr-2" %></li>
              <li><%= link_to "Sign Up", new_user_registration_path, class:"btn btn-sm btn-info" %></li>
            <% end %>
          </ul>
        </div>

      </nav>
    </header>
    <div class="container-fluid pt-3 pl-5 pr-5 pb-5">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
        <%= yield %>
    </div>
  </body>
</html>
